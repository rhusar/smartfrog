<?xml version="1.0"?>
<project name="SmartFrog Test Bundle" default="all">
    <property name="sf.core.dir" value="../../../smartfrog"/>

    <target name="all" depends="sfdist,init,compile,jar"/>

    <target name="sfdist">
        <ant dir="${sf.core.dir}" antfile="build.xml" target="dist"/>
    </target>

    <target name="init">
        <copy todir="build/lib" overwrite="true">
            <fileset dir="${sf.core.dir}/dist/lib/">
                <include name="smartfrog*.jar"/>
            </fileset>
        </copy>
        <mkdir dir="./build/classes"/>
    </target>

    <target name="compile" depends="init">
        <javac destdir="./build/classes"
               debug="on"
               srcdir="./src">
            <classpath>
                <fileset dir="build/lib" includes="*.jar"/>
            </classpath>
        </javac>
    </target>

    <target name="jar" depends="compile">
        <jar jarfile="./build/smartfrog-test-osgi.jar"
             compress="true"
             includes="**/*"
             manifest="./META-INF/MANIFEST.MF">
            <zipfileset dir="build/classes"/>
        </jar>

        <copy file="./build/smartfrog-test-osgi.jar"
              todir="C:\\knopflerfish_osgi_2.0.1\\knopflerfish.org\\osgi"
              overwrite="true"/>
    </target>

    <target name="clean">
        <delete dir="./classes"/>
        <delete dir="./build"/>
    </target>
</project>
