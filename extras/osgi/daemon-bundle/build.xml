<?xml version="1.0"?>
<project name="SmartFrog Daemon Bundle" default="all">
    <property name="bundle.filename" value="smartfrog-daemon.jar"/>

    <import file="../build-common.xml"/>

    <target name="all" depends="sfdist,jar,copyJarAround"/>

    <target name="init">
        <mkdir dir="./build/classes"/>
        <mkdir dir="./build/lib"/>
        <copy todir="build/lib" overwrite="true">
            <fileset dir="${sf.core.dir}/dist/lib/">
                <include name="smartfrog*.jar"/>
                <include name="sfService*.jar"/>
                <include name="sfExamples*.jar"/>
            </fileset>
        </copy>
    </target>

    <target name="compile" depends="init">
        <javac destdir="./build/classes"
               debug="on"
               srcdir="./src">
            <classpath>
                <fileset dir="lib" includes="*.jar"/>
                <fileset dir="build/lib" includes="*.jar"/>
            </classpath>
        </javac>
    </target>

    <target name="jar" depends="compile">
        <jar jarfile="./build/${bundle.filename}"
             compress="true"
             includes="**/*"
             manifest="./META-INF/MANIFEST.MF">
            <zipfileset dir="build/classes"/>
            <zipfileset dir="build/lib" includes="*.jar"/>
            <zipfileset dir="src" includes="*.sf"/>
        </jar>
    </target>

</project>
