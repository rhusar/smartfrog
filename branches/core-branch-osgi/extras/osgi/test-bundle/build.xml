<?xml version="1.0"?>
<project name="SmartFrog Test Bundle" default="all">
    <property name="bundle.filename" value="smartfrog-test.jar"/>

    <import file="../build-common.xml"/>

    <target name="all" depends="sfdist,jar,copyJarAround"/>

    <target name="init">
        <copy todir="build/lib" overwrite="true">
            <fileset dir="${sf.core.dir}/dist/lib/">
                <include name="smartfrog*.jar"/>
            </fileset>
        </copy>
        <mkdir dir="./build/classes"/>
    </target>

    <target name="compile" depends="init">
        <path id="classpath">
            <fileset dir="build/lib" includes="*.jar"/>
        </path>
        <javac destdir="./build/classes"
               debug="on"
               srcdir="./src">
            <classpath refid="classpath"/>
        </javac>
        <rmic
          stubversion="1.2"
          base="./build/classes"
          verify="true"
          compiler="sun"
          includes="**/*.class">
          <classpath refid="classpath"/>
        </rmic>
    </target>

    <target name="jar" depends="compile">
        <jar jarfile="./build/${bundle.filename}"
             compress="true"
             includes="**/*"
             manifest="./META-INF/MANIFEST.MF">
            <zipfileset dir="build/classes"/>
        </jar>
    </target>

</project>
