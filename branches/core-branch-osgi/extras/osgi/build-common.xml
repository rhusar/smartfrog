<?xml version="1.0"?>
<project name="common">
    <property name="sf.core.dir" value="../../../smartfrog"/>

    <target name="sfJars">
        <ant dir="${sf.core.dir}" antfile="build.xml" target="jars"/>
    </target>

    <target name="copyJarAround" depends="jar">
        <!--
        <copy file="./build/${bundle.filename}"
              todir="C:\\knopflerfish_osgi_2.0.1\\knopflerfish.org\\osgi"
              overwrite="true"/>
        -->
        <copy file="./build/${bundle.filename}"
              todir="C:\\"
              overwrite="true"/>
    </target>

    <target name="compile" depends="init">
        <javac destdir="./build/classes"
               debug="on"
               srcdir="./src">
            <classpath refid="classpath"/>
        </javac>
    </target>    

    <target name="rmic" depends="compile">
        <rmic
          stubversion="1.2"
          base="./build/classes"
          verify="true"
          compiler="sun"
          includes="**/*.class">
          <classpath refid="classpath"/>
        </rmic>
    </target>

    <target name="clean">
        <delete dir="./build"/>
    </target>
    
</project>